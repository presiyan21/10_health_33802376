<header class="site-header">
  <div class="container header-inner">
    <div class="brand">
      <a href="<%= base %>/" class="brand-link">
        <h1 class="brand-title"><%= siteName %></h1>
      </a>
      <p class="brand-sub">Simple fitness tracking</p>
    </div>

    <script>window.BASE = '<%= base %>';</script>
    <meta name="csrf-token" content="<%= csrfToken %>">

    <nav class="main-nav" aria-label="Main navigation">
      <a href="<%= base %>/">Home</a>
      <a href="<%= base %>/about">About</a>
      <a href="<%= base %>/posts">Community</a>
      <a href="<%= base %>/workouts/search">Search</a>

      <% if (currentUser) { %>
        <a href="<%= base %>/workouts/dashboard">Dashboard</a>
        <a href="<%= base %>/workouts/add">Add workout</a>
        <a href="<%= base %>/workouts/upload">Upload GPX</a>
        <a href="<%= base %>/workouts/export">Export CSV</a>
        <% if (currentUserRole === 'admin') { %>
          <a href="<%= base %>/users/admin/users" class="nav-admin">Admin</a>
        <% } %>
        <a href="<%= base %>/users/logout" class="btn small ghost">Logout</a>
      <% } else { %>
        <a href="<%= base %>/users/login" class="btn small">Login</a>
        <a href="<%= base %>/users/register" class="btn small ghost">Register</a>
      <% } %>
    </nav>
  </div>

  <link rel="stylesheet" href="<%= base %>/main.css">
  <script src="<%= base %>/charts.js" defer></script>
  <script src="<%= base %>/js/comments.js" defer></script>
</header>
