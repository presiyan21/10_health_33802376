<!doctype html>
<html>
  <head>
    <title>Login Audit - <%= siteName %></title>
    <link rel="stylesheet" href="<%= basePath %>/main.css" />
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="container">
      <h2>Login Audit Log</h2>
      <% if (auditRecords && auditRecords.length) { %>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Status</th>
              <th>Time</th>
            </tr>
          </thead>
          <tbody>
            <% auditRecords.forEach(function(r){ %>
              <tr>
                <td><%= r.id %></td>
                <td><%= r.username %></td>
                <td style="color: <%= r.status === 'SUCCESS' ? 'green' : 'red' %>"><%= r.status %></td>
                <td><%= r.attempt_time %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No audit records.</p>
      <% } %>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
